{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":maintainLockFilesWeekly",
    ":prHourlyLimitNone"
  ],
  "constraints": {
    "python": "==3.12"
  },
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true
  },
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "python-dependencies"
    }
  ]
}
